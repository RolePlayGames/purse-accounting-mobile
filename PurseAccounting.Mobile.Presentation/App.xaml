<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PurseAccountinng.Mobile.Presentation"
             x:Class="PurseAccountinng.Mobile.Presentation.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Colors -->
            <Color x:Key="Blue">#4C99CF</Color>
            <Color x:Key="DarkPurple">#524364</Color>
            <Color x:Key="Gray1">#333333</Color>
            <Color x:Key="Gray2">#4F4F4F</Color>
            <Color x:Key="InactiveElementFill">#E0E0E0</Color>
            <Color x:Key="InactiveElementText">#8D8D8D</Color>
            <Color x:Key="LightBlue">#F3F7FA</Color>
            <Color x:Key="Purple">#5A5386</Color>
            <Color x:Key="WorkBackground">White</Color>

            <!-- Sizes -->
            <x:Double x:Key="InputFieldHeight">60</x:Double>
            <x:Double x:Key="ButtonHeight">60</x:Double>
            <x:Double x:Key="IconSize">30</x:Double>
            <x:Double x:Key="CornerRadiusLarge">30</x:Double>
            <x:Double x:Key="CornerRadiusTop">40</x:Double>

            <!-- Font sizes -->
            <x:Double x:Key="FontSizeLarge">20</x:Double>
            <x:Double x:Key="FontSizeMedium">18</x:Double>
            <x:Double x:Key="FontSizeRegular">16</x:Double>
            <x:Double x:Key="FontSizeSmall">14</x:Double>

            <!-- Indents -->
            <x:Double x:Key="SpacingSmall">12</x:Double>
            <x:Double x:Key="SpacingMedium">15</x:Double>
            <x:Double x:Key="SpacingLarge">20</x:Double>
            <x:Double x:Key="SpacingXLarge">70</x:Double>
            <x:Double x:Key="SideMargin">24</x:Double>
            <x:Double x:Key="GoogleIconMargin">16</x:Double>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
