<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PurseAccountinng.Mobile.Presentation.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PurseAccountinng.Mobile.Presentation"
    xmlns:authorized="clr-namespace:PurseAccountinng.Mobile.Presentation.Pages.Authorized"
    xmlns:login="clr-namespace:PurseAccountinng.Mobile.Presentation.Pages.Unauthorized.Login"
    Title="PurseAccountinng.Mobile.Presentation"  
    FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <ShellContent ContentTemplate="{DataTemplate local:StartUpPage}" />

    <ShellContent Route="LoginPage" ContentTemplate="{DataTemplate login:LoginPage}" />
    <ShellContent Route="AccountingPage" ContentTemplate="{DataTemplate authorized:AccountingPage}" />
    <ShellContent Route="Authorized" ContentTemplate="{DataTemplate authorized:AuthorizedPage}" />

</Shell>
